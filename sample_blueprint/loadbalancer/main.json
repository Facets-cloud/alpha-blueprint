{
  "kind": "loadbalancer",
  "flavor": "default",
  "version": "latest",
  "disabled": false,
  "provided": false,
  "metadata": {
  },
  "spec": {
    "internal": true,
    "authenticated": true,
    "size": {
      "cpu": 1,
      "memory": 1
    },
    "domains": {
      "mpl-main": {
        "certificateRef": "Secret Name/ACM",
        "url": "facets.cloud",
        "alias": "main"
      }
    },
    "rules": {
      "fe": {
        "path": "/",
        "service": "${application.frontend.out.interfaces.grpc.host}",
        "port": "${application.frontend.out.interfaces.grpc.port}"
      },
      "be": {
        "path": "/api/",
        "service": "${application.backend.out.interfaces.grpc.host}",
        "port": "${application.backend.out.interfaces.grpc.port}"
      }
    }
  },
  "out": {
    "comment": "Will be generated, or can be provided",
    "interface": {
      "default": {
        "port": 443,
        "host": "xyz.com",
        "username": "user",
        "password": "password"
      },
      "mpl-main": {
        "port": 443,
        "host": "mpl.com",
        "username": "user",
        "password": "password"
      }
    }
  },
  "advanced": {
    "helm_ingress": {
      "spec": {
        "chart": "",
        "repository": "",
        "comment": "check here for all attributes https://registry.terraform.io/providers/hashicorp/helm/latest/docs/resources/release",
        "value": {
          "example": {
            "region": "${stack.out.variables.REGION}"
          }
        }
      }
    }
  }
}