{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Schema for RabbitMQ",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "rabbitmq"
          ]
        },
        "flavor": {
          "type": "string",
          "enum": [
            "k8s"
          ]
        },
        "version": {
          "type": "string",
          "enum": [
            "0.1",
            "latest"
          ]
        }
      }
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values to be used by different flavours of RabbitMQ",
          "anyOf": [
            {
              "$ref": "./flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "description": "Required specifications for RabbitMQ instances",
          "additionalProperties": false,
          "properties": {
            "rabbitmq_version": {
              "type": "string",
              "description": "Version of RabbitMQ e.g. 3.9.23",
              "minLength": 3
            },
            "size": {
              "allOf": [
                {
                  "type": "object",
                  "$ref": "../../traits/datastore-sizing.schema.json",
                }
              ]
            }
          },
          "required": [
            "rabbitmq_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "description": "Output from the RabbitMQ module",
          "allOf": [
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "tcp": {
                      "type": "object",
                      "description": "Map of type interface for tcp port of RabbitMQ",
                      "allOf": [
                        {
                          "$ref": "../../traits/datastore-interface.schema.json"
                        }
                      ]
                    },
                    "http": {
                      "type": "object",
                      "description": "Map of type interface for http port of RabbitMQ",
                      "allOf": [
                        {
                          "$ref": "../../traits/datastore-interface.schema.json"
                        }
                      ]
                    }
                  },
                  "description": "Map of http and tcp endpoints generated by the module"
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}