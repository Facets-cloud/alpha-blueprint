{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Schema for S3",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values for s3",
          "anyOf": [
            {
              "$ref": "./flavor-s3.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "additionalProperties": false,
          "required": [
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "description": "Output from the RabbitMQ module",
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "bucket_name": {
                  "type": "string",
                  "description": "Name of the s3 bucket"
                },
                "bucket_arn": {
                  "type": "string",
                  "description": "ARN of the bucket"
                },
                "bucket_region": {
                  "type": "string",
                  "description": "Region of the Bucket"
                },
                "iam_policies": {
                  "type": "object",
                  "description": "IAM read_only and read_write policies for the bucket",
                  "properties": {
                    "READ_ONLY": {
                      "type": "string",
                      "description": "ARN of the read_only policy of the bucket"
                    },
                    "READ_WRITE": {
                      "type": "string",
                      "description": "ARN of the read_write policy of the bucket"
                    }
                  }
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}