{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Schema for S3",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values for s3",
          "anyOf": [
            {
              "$ref": "./flavor-aws.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "description": "Required specifications for RabbitMQ instances",
          "additionalProperties": false,
          "properties": {
            "rabbitmq_version": {
              "type": "string",
              "description": "Version of RabbitMQ e.g. 3.9.23"
            },
            "size": {
              "type": "object",
              "description": "Map containing necessary information for instance size",
              "$ref": "../../traits/size.schema.json"
            }
          },
          "required": [
            "rabbitmq_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "description": "Output from the RabbitMQ module",
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties":  {
                    "tcp": {
                      "type": "object",
                      "description": "Map of type interface for tcp port of RabbitMQ",
                      "allOf": [
                        {
                          "$ref": "../../traits/interface.schema.json"
                        }
                      ]
                    },
                    "http": {
                      "type": "object",
                      "description": "Map of type interface for http port of RabbitMQ",
                      "allOf": [
                        {
                          "$ref": "../../traits/interface.schema.json"
                        }
                      ]
                    }
                  },
                  "description": "Map of http and tcp endpoints generated by the module"
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}