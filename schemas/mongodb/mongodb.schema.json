{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "allOf": [
            {
              "$ref": "flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "authenticated": {
              "type": "boolean",
              "definition": "Make this mongodb instance Password protected"
            },
            "mongodb_version": {
              "type": "string",
              "definition": "Version of mongodb e.g. 6.0.2"
            },
            "size": {
              "allOf": [
                {
                  "type": "object",
                  "$ref": "../../traits/size.schema.json"
                },
                {
                  "type": "object",
                  "properties": {
                    "replica_count": {
                      "type": "integer",
                      "description": "Number of reader instances needs to be deployed"
                    }
                  },
                  "required":["replica_count"]
                }              
              ]
            }
          },
          "required": [
            "authenticated",
            "mongodb_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-interfaces.schema.json"
                },
                "instances": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/interface.schema.json"
                    }
                  }
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}