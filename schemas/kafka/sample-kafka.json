{
    "$schema": "./kafka.schema.json",
    "kind": "kafka",
    "version": "0.2",
    "flavor": "k8s",
    "metadata": {},
    "spec": {
        "authenticated": true,
        "kafka_version": "3.2.3",
        "persistence_enabled": true,
        "zookeeper_version": "3.8.0",
        "size": {
            "kafka": {
                "cpu": "1",
                "memory": "1G",
                "replica_count": 1,
                "volume": "10Gi"
            },
            "zookeeper": {
                "cpu": "1",
                "memory": "1G",
                "replica_count": 1,
                "volume": "10Gi"
            }
        }
    },
    "advanced": {
        "k8s": {
            "kafka": {
                "values": {
                    "metrics.kafka.enabled": true,
                    "metrics.jmx.enabled": true,
                    "metrics.serviceMonitor.enabled": true,
                    "metrics.prometheusRule.enabled": true
                }
            }
        }
    },
    "out": {
        "interfaces": {
            "host": "",
            "name": "",
            "password": "",
            "port": "",
            "username": ""
        },
        "extra_settings": {
            "kafka": {
                "sasl_mechanism": "SCRAM-SHA-256",
                "security_protocol": "PLAINTEXT"
            }
        },
        "instances": {
            "kafka_1":{
                "host": "",
                "name": "",
                "password": "",
                "port": "",
                "username": ""
            }
        }
    }
}