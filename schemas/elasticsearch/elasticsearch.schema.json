{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Schema for Elasticsearch",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "elasticsearch"
          ]
        },
        "flavor": {
          "type": "string",
          "enum": [
            "k8s","aws"
          ]
        },
        "version": {
          "type": "string",
          "enum": [
            "0.1",
            "latest"
          ]
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values to be used by different flavours of Elasticsearch",
          "anyOf": [
            {
              "$ref": "./flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "description": "Required specifications for Elasticsearch instances",
          "additionalProperties": false,
          "properties": {
            "elasticsearch_version": {
              "type": "string",
              "description": "Version of Elasticsearch e.g. 8.5.1"
            },
            "size": {
              "type": "object",
              "description": "Map containing necessary information for instance size",
              "$ref": "../../traits/multi-instance-datastore-sizing.schema.json"
            }
          },
          "required": [
            "elasticsearch_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "cluster": {
                      "type": "object",
                      "description": "Map of type interface for cluster endpoint & port of Elasticsearch",
                      "allOf": [
                        {
                          "$ref": "../../traits/multi-node-datastore-interface.schema.json"
                        }
                      ]
                    },
                    "http": {
                      "type": "object",
                      "description": "Map of type interface for http endpoint & port of Elasticsearch",
                      "properties": {
                        "host": {
                          "type": "string",
                          "description": "The hostname or IP address of the database or cache server."
                        },
                        "password": {
                          "type": "string",
                          "description": "The password to use for authentication when connecting to the database or cache server."
                        },
                        "connection_string": {
                          "type": "string",
                          "description": "The connection_string to use when connecting to the datastore."
                        }
                      }
                    }
                  },
                  "description": "Map of http and cluster endpoints generated by the module"
                }
              }
            }
          ]
        }
      }
    }
  }
}