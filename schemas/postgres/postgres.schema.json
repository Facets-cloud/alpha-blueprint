{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Description of the Postgres Schema",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "kind":{
          "type":"string",
          "enum": ["postgres"],
          "description": "Describes the type of resource. e.g. cloudsql or aurora"
        },
        "flavor":{
          "type":"string",
          "enum": ["cloudsql","aurora"],
          "description": "Implementation selector for the Postgres resource. e.g. for a resource type cloudsql or aurora."
        },
        "version":{
          "type":"string",
          "enum": ["0.1", "latest"],
          "description": "This field can be used to pin to a particular version"
        },
        "disabled": {
          "type": "boolean",
          "description": "Flag to disable the resource"
        },
        "provided": {
          "type": "boolean",
          "description": "Flag to tell if the resource should not be provisioned by facets",
          "default": false
        },
        "depends_on": {
          "type": "array",
          "items": {},
          "description": "Dependencies on other resources. e.g. application x may depend on y"
        },
        "metadata": {
          "type": "object",
          "description": "Metadata related to the resource",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the resource\n    - if not specified, fallback is the `filename`"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "description": "Advanced values to be used by different flavours of postgres between Cloudsql or Aurora",
          "anyOf": [
            {
              "$ref": "./flavor-aurora.schema.json"
            },
            {
              "$ref": "./flavor-cloudsql.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
      "kind",
      "flavor",
      "version",
      "metadata",
      "spec"
    ],
  "if": {
    "properties": {
      "provided": {
        "const": true
      }
    }
  },
  "then": {
    "required": ["out"]
  },
  "else": {
    "not": {
      "required": ["out"]
    }
  },
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "description": "Required specifications for postgres instances",
          "additionalProperties": false,
          "properties": {
            "postgres_version": {
              "type": "string",
              "description": "Version of postgres e.g. 12.11"
            },
            "size": {
              "type": "object",
              "description": "Map containing necessary information for Reader and Writer. For aurora postgres sql, volume is not needed for reader and writer but required for cloudsql.",
              "$ref": "../../traits/reader-writer-datastore-sizing.schema.json"
            }
          },
          "required": [
            "postgres_version",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "description": "Output from the postgres module",
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-datastore-sizing.schema.json",
                  "description": "Map of reader and writer endpoints generated by the module"
                },
                "instances": {
                  "type": "object",
                  "description": "Map of instances generated by the module",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/multi-instance-datastore-sizing.schema.json"
                    }
                  }
                },
                "postgresVersion": {
                  "type": "string",
                  "description": "Version of postgres e.g. 12.11"
                },
                "excludedDatabases": {
                  "type": "list",
                  "description": "List of databases to be excluded for prometheus-postgres-exporter"
                },
                "defaultDatabase": {
                  "type": "string",
                  "description": "Default database for the connection string of prometheus-postgres-exporter"
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}