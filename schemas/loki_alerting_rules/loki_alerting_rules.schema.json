{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "kind":{
          "type":"string",
          "enum": ["loki_alerting_rules"]
        },
        "flavor":{
          "type":"string",
          "enum": ["default","k8s"]
        },
        "version":{
          "type":"string",
          "enum": ["0.1", "latest"]
        },
        "conditional_on_intent":{
          "type":"string"
        }
      }
    },
    {
      "$ref": "#/$defs/specDef"
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "properties": {
            "rules": {
              "type": "object",
              "description": "Loki Alerting rules allow you to define alert conditions based on LogQL expression language expressions and to send notifications about firing alerts to an external service",
              "patternProperties": {
                "^[a-zA-Z]+\\d+$": {
                  "type": "object",
                  "description": "Specify alert rule",
                  "properties": {
                    "expr": {
                      "type": "string",
                      "description": "alert expression"
                    },
                    "for": {
                      "type": "string",
                      "description": "The optional `for` clause causes Loki to wait for a certain duration between first encountering a new expression output vector element and counting an alert as firing for this element",
                      "pattern": "^\\d+[a-z]$"
                    },
                    "summary": {
                      "type": "string",
                      "description": "The summary of the alert rule"
                    },
                    "message": {
                      "type": "string",
                      "description": "The message for the alert rule"
                    },
                    "severity": {
                      "type": "string",
                      "description": "The alert rule severity"
                    },
                    "resource_name": {
                      "type": "string",
                      "description": "The resource name. Eg: {{ $labels.pod }}"
                    },
                    "disabled": {
                      "type": "boolean",
                      "description": "Enable/Disable alert rule"
                    },
                    "resource_type": {
                      "type": "string",
                      "description": "The resource type. Eg: pod"
                    },
                    "labels": {
                      "type": "object",
                      "description": "The `labels` clause allows specifying a set of additional labels to be attached to the alert. Any existing conflicting labels will be overwritten.",
                      "patternProperties": {
                        "^[a-zA-Z0-9-_]*$": {
                          "type": "string",
                          "description": "Label value"
                        }
                      }
                    },
                    "annotations": {
                      "type": "object",
                      "description": "The `annotations` clause specifies a set of informational labels that can be used to store longer additional information such as alert descriptions or runbook links",
                      "patternProperties": {
                        "^[a-zA-Z0-9-_]+$": {
                          "type": "string",
                          "description": "Annotation value"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "expr",
                  "for",
                  "summary",
                  "message",
                  "severity",
                  "resource_name",
                  "resource_type",
                  "labels",
                  "annotations"
                ]
              }
            }
          }
        }
      }
    }
  }
}
