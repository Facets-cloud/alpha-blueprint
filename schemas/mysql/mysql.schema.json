{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "description": "Describes the type of resource. e.g. ingress, application, mysql etc. If not specified, fallback is the `folder_name`/instances",
          "enum": [
            "mysql"
          ]
        },
        "flavor": {
          "type": "string",
          "description": "Implementation selector for the resource. e.g. for a resource type ingress, default, aws_alb, gcp_alb etc.",
          "enum": [
            "aurora",
            "cloudsql",
            "rds",
            "flexible_server"
          ]
        },
        "version": {
          "type": "string",
          "description": "This field can be used to pin to a particular version"
        }
      },
      "if": {
        "properties": {
          "flavor": {
            "const": "aurora"
          }
        }
      },
      "then": {
        "properties": {
          "version": {
            "const": "0.1"
          }
        }
      },
      "else": {
        "if": {
          "properties": {
            "flavor": {
              "const": "flexible_server"
            }
          }
        },
        "then": {
          "properties": {
            "version": {
              "const": "0.1"
            }
          }
        }
      }
    },
    {
      "$ref": "#/$defs/advancedDef"
    },
    {
      "$ref": "#/$defs/outDef"
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "properties": {
            "mysql_version": {
              "type": "string",
              "description": "Aurora compatible MySQL version (eg: 5.7 or 5.9)"
            },
            "size": {
              "type": "object",
              "$ref": "../../traits/reader-writer-datastore-sizing.schema.json",
              "required": []
            }
          },
          "required": [
            "mysql_version",
            "size"
          ]
        }
      }
    },
    "advancedDef": {
      "type": "object",
      "properties": {
        "advanced": {
          "allOf": [
            {
              "$ref": "flavor-aurora.schema.json"
            },
            {
              "$ref": "flavor-rds.schema.json"
            },
            {
              "$ref": "flavor-cloudsql.schema.json"
            },
            {
              "$ref": "flavor-flexible_server.schema.json"
            }
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-interfaces.schema.json"
                },
                "instances": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/interface.schema.json"
                    }
                  }
                }
              },
              "required": []
            }
          ]
        }
      }
    }
  }
}