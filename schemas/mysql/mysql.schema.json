{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/advancedDef"
    },
    {
      "$ref": "#/$defs/outDef"
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "properties": {
            "mysql_version": {
              "type": "string",
              "description": "Aurora compatible MySQL version (eg: 5.7.mysql_aurora.2.10.1)"
            },
            "size": {
              "type": "object",
              "$ref": "../../traits/reader-writer-datastore-sizing..schema.json",
              "required": []
            }
          },
          "required": [
            "mysql_version",
            "size"
          ]
        }
      }
    },
    "advancedDef": {
      "type": "object",
      "properties": {
        "advanced": {
          "allOf": [
            {
              "$ref": "flavor-aurora.schema.json"
            },
            {
              "$ref": "flavor-rds.schema.json"
            }
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "additionalProperties": false,
          "allOf": [
            {
              "$ref": "#/$defs/specDef"
            },
            {
              "properties": {
                "interfaces": {
                  "type": "object",
                  "additionalProperties": false,
                  "$ref": "../../traits/reader-writer-interfaces.schema.json"
                },
                "instances": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^([a-z]*-[0-9]+)$": {
                      "$ref": "../../traits/interface.schema.json"
                    }
                  }
                }
              },
              "required": [
              ]
            }
          ]
        }
      }
    }
  }
}
