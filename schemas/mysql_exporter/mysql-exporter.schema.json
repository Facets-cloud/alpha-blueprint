{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Schema for Prometheus MySQL exporter",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "kind":{
          "type":"string",
          "enum": ["mysql_exporter"]
        },
        "flavor":{
          "type":"string",
          "enum": ["k8s"]
        },
        "version":{
          "type":"string",
          "enum": ["0.1", "latest"]
        }
      }
    },
    {
      "$ref": "#/$defs/advancedDef"
    }
  ],
  "required": [
    "kind",
    "version"
  ],
  "$defs": {
    "advancedDef": {
      "type": "object",
      "properties": {
        "advanced": {
          "anyOf": [
            {
              "$ref": "./flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  }
}