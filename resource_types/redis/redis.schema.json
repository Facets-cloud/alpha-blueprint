{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../traits/base.schema.json"
    },
    {
      "$ref": "#/$defs/specDef"
    },
    {
      "$ref": "#/$defs/outDef"
    },
    {
      "type": "object",
      "properties": {
        "advanced": {
          "type": "object",
          "allOf": [
            {
              "$ref": "flavor-k8s.schema.json"
            }
          ]
        }
      }
    }
  ],
  "required": [
    "kind",
    "flavor",
    "version",
    "metadata",
    "spec"
  ],
  "$defs": {
    "specDef": {
      "type": "object",
      "properties": {
        "spec": {
          "type": "object",
          "if": {
            "properties": {
              "replica_count": {
                "minimum": 1
              }
            }
          },
          "then": {
            "required": [
              "size.replica"
            ]
          },
          "properties": {
            "authenticated": {
              "type": "boolean",
              "definition": "Make this redis Password protected"
            },
            "redis_version": {
              "type": "string",
              "definition": "Version of redis e.g. 6.3"
            },
            "persistence": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "definition": "Enable Persistence for this redis"
                },
                "volume": {
                  "type": "string",
                  "definition": "Volume size to be mounted for persistence"
                }
              },
              "if": {
                "properties": {
                  "enabled": {
                    "const": true
                  }
                }
              },
              "then": {
                "required": [
                  "volume"
                ]
              },
              "required": [
                "enabled"
              ]
            },
            "replica_count": {
              "type": "integer",
              "definitions": "Number of read replicas for the redis"
            },
            "size": {
              "type": "object",
              "properties": {
                "master": {
                  "$ref": "../../traits/size.schema.json"
                },
                "replica": {
                  "$ref": "../../traits/size.schema.json"
                }
              },
              "required": [
                "master"
              ]
            }
          },
          "required": [
            "authenticated",
            "redis_version",
            "persistence",
            "replica_count",
            "size"
          ]
        }
      }
    },
    "outDef": {
      "type": "object",
      "properties": {
        "out": {
          "type": "object",
          "properties": {
            "interfaces": {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^(replica_[0-9]+)$": {
                  "$ref": "../../traits/interface.schema.json"
                }
              },
              "properties": {
                "master": {
                  "$ref": "../../traits/interface.schema.json"
                },
                "replica": {
                  "$ref": "../../traits/interface.schema.json"
                }
              },
              "required": [
                "master",
                "replica"
              ]
            }
          },
          "required": [
          ]
        }
      }
    }
  }
}