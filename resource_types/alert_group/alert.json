{
  "kind": "alert_group",
  "flavor": "default",
  "version": "latest",
  "lifecycle": "ENVIRONMENT<default specified in module, need not be overriden>",
  "disabled": false,
  "provided": false,
  "depends_on": [
  ],
  "metadata": {
    "name": "group_name"
  },
  "spec": {
    "rules": {
      "rule_name": {
        "expression": "rate(kube_pod_container_status_restarts_total{container!=\"filebeat-daemon\"}[20m]) * 1200 > 5",
        "for": "5m",
        "summary": "Pod Crashing ",
        "message": "Kubernetes pod crash looping since last 5 minutes for {{ $labels.instance }}",
        "severity": "critical or warning or normal",
        "labels": {
          "name": "value"
        },
        "annotations": {
          "name": "value"
        }
      }
    }
  },
  "out": {
  }
}